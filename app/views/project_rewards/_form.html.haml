= simple_form_for [@project, @project_reward] do |f|
  .row-fluid
    - if @project_reward.errors.any?
      #error_explanation
        %h2= t('.pluralizeproject_rewarderrorsc', :pluralizeproject_rewarderrorsc => (pluralize(@project_reward.errors.count, "error")))
        %ul
          - @project_reward.errors.full_messages.each do |msg|
            %li= msg
  - if @project.item_based
    .row-fluid
      .span4
        = f.input :project_id, :as => :hidden, :input_html => {:value => @project.id}
        .sub-headline= t('.tênbr')
        = f.input :name, label: false, :input_html => {:class => "span12"}
      .span4
        .sub-headline= t('.mức_vnĐ_br')
        = f.input :value, label: false, :input_html => {:class => "span12"}
      .span4
        .sub-headline= t('.số_lượng_cái_br')
        = f.input :quantity, label: false, :input_html => {:class => "span12"}
    .row-fluid
      .span12
        .sub-headline= t('.thông_tin_Điều_khoản_quyền_lợi')
        / TODO: Add examples
        = f.input :description, label: false, :input_html => {:class => "span12"}
    .row-fluid
      .span12
        .sub-headline= t('.Ảnh_175_x_175px')
        = f.file_field :photo
        = f.hidden_field :photo_cache
  - else
    .row-fluid
      .span12
        .sub-headline= t('.mức_vnĐ_br')
        = f.input :value, label: false, :input_html => {:class => "span12"}
    .row-fluid
      .span12
        .sub-headline= t('.thông_tin_Điều_khoản_quyền_lợi')
        / TODO: Add examples
        = f.input :description, label: false, :input_html => {:class => "span12"}
  .row-fluid
    .pull-right= f.submit "Lưu", class: "submit"
