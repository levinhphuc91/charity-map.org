.project-bar
  .top-image
    - if current_user && project.user == current_user
      .delete-icon= link_to= t('.xoá', ), users_delete_ext_project_from_portfolio_path(ext_project: project.id), method: :post, confirm: "Bạn có chắc muốn xoá #{project.title} không?"
    .info
      .title= project.title
      .location
        = project.location || "Viet Nam"
    - if project.photo?
      = image_tag project.photo_url(:portfolio), size: "450x160"
    - else
      = image_tag "portfolio/1009408_10201157689293186_167515360_o.jpg", size: "450x160"

  .bottom-stats
    .stat-box.donations
      .text= t('.quỹ')
      .number= human_currency project.funding_goal
    .stat-box.donors
      .text= t('.mtq')
      .number= project.number_of_donors
    .stat-box.reviews
      .text= t('.ngày')
      .number= human_time project.executed_at
