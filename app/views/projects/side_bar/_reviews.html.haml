.heading-bar
  .sub-headline #{link_to= t('.lời_giới_thiệu', ), project_recommendations_path(project)}
- project.recommendations.each do |rec|
  .row-fluid
    %p
      <b>#{link_to rec.user.name, user_profile_path(rec.user)}</b> &sdot; #{human_time rec.updated_at}
      %br/
      %i.icon-quote-left
      = t('.reccontent', :reccontent => (rec.content))
      - if (current_user) && (rec.user == current_user)
        = link_to t('.edit'), edit_project_recommendation_path(project, rec), class: "edit_recommendation"
.row-fluid
  .pull-right
    = link_to new_project_recommendation_path(project) do
      .more= t('.viết_lời_giới_thiệu')
